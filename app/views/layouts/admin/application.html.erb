<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Admin - Bullpen Cup" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-50">
    <!-- Admin Header -->
    <header class="bg-white shadow-sm border-b border-gray-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <!-- Logo and Title -->
          <div class="flex items-center">
            <%= link_to admin_root_path, class: "flex items-center" do %>
              <span class="text-2xl">üèÜ</span>
              <span class="ml-2 text-xl font-bold text-gray-900">Bullpen Cup</span>
              <span class="ml-2 bg-yellow-500 text-black px-2 py-1 rounded text-sm">ADMIN</span>
            <% end %>
          </div>

          <!-- Navigation -->
          <nav class="hidden md:flex space-x-8">
            <%= link_to "Dashboard", admin_root_path, 
                class: "text-gray-700 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium" %>
            <%= link_to "Tournaments", admin_tournaments_path, 
                class: "text-gray-700 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium" %>
          </nav>

          <!-- User Menu -->
          <div class="flex items-center space-x-4">
            <span class="text-sm text-gray-700">
              Welcome, <span class="font-medium"><%= current_user.display_name %></span>
            </span>
            <%= link_to "Back to Site", root_path, 
                class: "text-gray-700 hover:text-gray-900 text-sm" %>
            <%= link_to "Sign Out", destroy_user_session_path, 
                data: { "turbo-method": :delete },
                class: "bg-red-600 text-white px-3 py-2 rounded-md text-sm font-medium hover:bg-red-700" %>
          </div>
        </div>
      </div>
    </header>

    <!-- Flash messages -->
    <% if notice %>
      <div class="max-w-7xl mx-auto mt-4 px-4 sm:px-6 lg:px-8">
        <div class="bg-green-50 border border-green-200 rounded-lg p-4">
          <div class="flex">
            <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <p class="ml-3 text-sm text-green-700"><%= notice %></p>
          </div>
        </div>
      </div>
    <% end %>
    
    <% if alert %>
      <div class="max-w-7xl mx-auto mt-4 px-4 sm:px-6 lg:px-8">
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <div class="flex">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
            <p class="ml-3 text-sm text-red-700"><%= alert %></p>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
      <%= yield %>
    </main>
  </body>
</html> 