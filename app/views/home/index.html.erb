<% if user_signed_in? %>
  <% if @show_no_groups %>
    <!-- User has no groups - Onboarding -->
    <div class="min-h-screen bg-gradient-to-br from-blue-50 to-green-50">
      <div class="container mx-auto px-4 py-16">
        <div class="max-w-4xl mx-auto text-center">
          <!-- Welcome Header -->
          <div class="mb-12">
            <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
              Welcome to <span class="text-green-600">Scorecard</span>! 👋
            </h1>
            <p class="text-xl text-gray-600 mb-2">
              Hi <%= current_user.display_name %>, you're almost ready to start.
            </p>
            <p class="text-lg text-gray-500">
              You'll need an invitation to join a golf trip, or you can create your own.
            </p>
          </div>

          <!-- Join Group Options -->
          <div class="bg-white rounded-2xl shadow-xl p-8 mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Get Started with Scorecard</h2>
            
            <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
              <!-- Join Existing Group -->
              <div class="border-2 border-green-200 rounded-xl p-8 hover:border-green-300 transition-colors">
                <div class="text-4xl mb-4">🔑</div>
                <h3 class="text-xl font-semibold text-gray-900 mb-3">Join Golf Trip</h3>
                <p class="text-gray-600 mb-6">
                  Got invited to a golf trip? Enter your group invite code here to join the fun and see who you're playing against.
                </p>
                <%= link_to join_group_path, class: "w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-3 px-4 rounded-lg transition-colors inline-block text-center" do %>
                  Enter Trip Code
                <% end %>
              </div>

              <!-- Create New Group -->
              <div class="border-2 border-blue-200 rounded-xl p-8 hover:border-blue-300 transition-colors">
                <div class="text-4xl mb-4">🏆</div>
                <h3 class="text-xl font-semibold text-gray-900 mb-3">Organize Golf Trip</h3>
                <p class="text-gray-600 mb-6">
                  Planning a golf getaway with the crew? Create your trip here and invite your buddies to join the competition.
                </p>
                <%= link_to new_group_path, class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-4 rounded-lg transition-colors inline-block text-center" do %>
                  Create Trip
                <% end %>
              </div>
            </div>

            <div class="mt-8 p-6 bg-gray-50 rounded-xl">
              <h3 class="text-lg font-semibold text-gray-900 mb-2">How it works</h3>
              <div class="grid md:grid-cols-2 gap-6 text-left">
                <div>
                  <h4 class="font-semibold text-gray-900 mb-2">🔑 Joining a Trip</h4>
                  <p class="text-gray-600 text-sm">
                    Ask the trip organizer for your 6-character invite code. Enter it to join instantly and start trash talking.
                  </p>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900 mb-2">🏆 Organizing a Trip</h4>
                  <p class="text-gray-600 text-sm">
                    Set up your golf trip, invite your buddies using your unique group code, and organize epic tournaments.
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Help Section -->
          <div class="text-center">
            <p class="text-gray-600 mb-4">
              Need help getting started? 
              <a href="#" class="text-green-600 hover:text-green-700 font-semibold">Contact Support</a>
            </p>
            <%= link_to "Sign Out", destroy_user_session_path, data: { "turbo-method": :delete }, 
                class: "text-gray-500 hover:text-gray-700 underline" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% else %>
  <!-- Guest Landing Page -->
  <div class="min-h-screen bg-gradient-to-br from-green-800 via-green-700 to-emerald-600">
    <!-- Navigation Bar -->
    <nav class="container mx-auto px-6 py-4">
      <div class="flex justify-between items-center">
        <div class="flex items-center space-x-3">
          <div class="w-10 h-10 bg-white rounded-xl flex items-center justify-center shadow-lg">
            <span class="text-green-700 font-bold text-lg">S</span>
          </div>
          <span class="text-white text-2xl font-bold">Scorecard</span>
        </div>
        <div class="flex items-center space-x-6">
          <%= link_to "Sign In", new_user_session_path, 
              class: "text-white hover:text-green-200 font-medium transition-colors" %>
          <%= link_to "Get Started", new_user_registration_path, 
              class: "bg-white hover:bg-green-50 text-green-700 font-semibold px-6 py-3 rounded-xl transition-all shadow-lg hover:shadow-xl" %>
        </div>
      </div>
    </nav>

    <!-- Hero Section -->
    <div class="container mx-auto px-6 py-20">
      <div class="max-w-5xl mx-auto text-center text-white">
        <!-- Main Headline -->
        <div class="mb-16">
          <h1 class="text-5xl md:text-7xl font-bold mb-6 leading-tight">
            Epic Golf Trips
            <span class="block text-yellow-300">Made Simple</span>
          </h1> 
          <p class="text-xl md:text-2xl text-green-100 mb-8 max-w-4xl mx-auto leading-relaxed">
            The easiest way to organize tournaments, track scores, and settle the score 
            with your golf buddies. Perfect for weekend getaways and annual golf trips.
          </p>
        </div>
      </div>
    </div>

    <!-- Features Section -->
    <div class="bg-white py-16">
      <div class="container mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            Everything Your Golf Trip Needs
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            From organizing teams to tracking live scores, turn your golf getaway into an unforgettable competition that your crew will talk about all year.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8 mb-12">
          <!-- Easy Setup -->
          <div class="text-center p-6 bg-green-50 rounded-xl">
            <div class="text-4xl mb-4">🚀</div>
            <h3 class="text-xl font-semibold mb-3 text-gray-900">Dead Simple Setup</h3>
            <p class="text-gray-600">
              Create your trip in minutes. Invite your buddies with a simple code. No complicated apps or confusing menus.
            </p>
          </div>

          <!-- Tournament Formats -->
          <div class="text-center p-6 bg-blue-50 rounded-xl">
            <div class="text-4xl mb-4">🏆</div>
            <h3 class="text-xl font-semibold mb-3 text-gray-900">Epic Competitions</h3>
            <p class="text-gray-600">
              Ryder Cup style matches, team tournaments, and singles competitions. Create the drama your trip deserves.
            </p>
          </div>

          <!-- Team Drama -->
          <div class="text-center p-6 bg-yellow-50 rounded-xl">
            <div class="text-4xl mb-4">👥</div>
            <h3 class="text-xl font-semibold mb-3 text-gray-900">Team Drama</h3>
            <p class="text-gray-600">
              Draft teams, assign captains, and watch the friendly rivalry unfold. Perfect for group dynamics and trash talk.
            </p>
          </div>

          <!-- Live Action -->
          <div class="text-center p-6 bg-purple-50 rounded-xl">
            <div class="text-4xl mb-4">📱</div>
            <h3 class="text-xl font-semibold mb-3 text-gray-900">Live Updates</h3>
            <p class="text-gray-600">
              Track scores in real-time from the course. See who's choking and who's clutch as it happens.
            </p>
          </div>

          <!-- Settle Bets -->
          <div class="text-center p-6 bg-red-50 rounded-xl">
            <div class="text-4xl mb-4">💰</div>
            <h3 class="text-xl font-semibold mb-3 text-gray-900">Settle the Score</h3>
            <p class="text-gray-600">
              Final leaderboards, match results, and bragging rights documentation. Know exactly who owes who drinks.
            </p>
          </div>

          <!-- Multiple Trips -->
          <div class="text-center p-6 bg-indigo-50 rounded-xl">
            <div class="text-4xl mb-4">🌎</div>
            <h3 class="text-xl font-semibold mb-3 text-gray-900">Multiple Trips</h3>
            <p class="text-gray-600">
              Join different golf trips throughout the year. Weekend trips, bachelor parties, annual getaways - all in one place.
            </p>
          </div>
        </div>

        <!-- CTA Section -->
        <div class="text-center bg-gray-50 rounded-2xl p-8">
          <h3 class="text-2xl font-bold text-gray-900 mb-4">
            Ready to Plan Your Next Golf Trip?
          </h3>
          <p class="text-gray-600 mb-6 max-w-2xl mx-auto">
            Join golfers already using Scorecard to turn their weekend getaways into legendary competitions.
          </p>
          <%= link_to "Start Planning Free", new_user_registration_path, 
              class: "bg-green-600 hover:bg-green-700 text-white font-semibold px-8 py-3 rounded-lg text-lg transition-colors inline-block" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
