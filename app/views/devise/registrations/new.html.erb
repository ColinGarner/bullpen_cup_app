<div class="min-h-screen bg-gray-50 flex items-center justify-center px-4 py-12">
  <div class="max-w-md w-full">
    <!-- Logo/Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">
        üèÜ <span class="text-green-600">Scorecard</span>
      </h1>
      <p class="text-gray-600">Join the tournament!</p>
    </div>

    <!-- Sign Up Form -->
    <div class="bg-white rounded-lg shadow-md p-8">
      <h2 class="text-xl font-medium text-gray-900 mb-6 text-center">Create your account</h2>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), local: true) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- Name Fields -->
        <div class="grid grid-cols-2 gap-4 mb-4">
          <div>
            <%= f.label :first_name, "First name", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "given-name", placeholder: "Tiger",
                class: "w-full px-4 py-3 border border-gray-300 rounded-md text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
          </div>
          <div>
            <%= f.label :last_name, "Last name", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_field :last_name, autocomplete: "family-name", placeholder: "Woods",
                class: "w-full px-4 py-3 border border-gray-300 rounded-md text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
          </div>
        </div>

        <!-- Handicap Field -->
        <div class="mb-4">
          <%= f.label :handicap, "Handicap Index", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.number_field :handicap, step: 0.1, min: 0, max: 54, placeholder: "10.5",
              class: "w-full px-4 py-3 border border-gray-300 rounded-md text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
          <p class="text-xs text-gray-500 mt-1">
            Optional: Your official handicap index (0-54). This will be used for stroke calculations in matches.
          </p>
        </div>

        <!-- Email Field -->
        <div class="mb-4">
          <div class="mb-2">
            <%= f.label :email, "Email address", class: "block text-sm font-medium text-gray-700" %>
          </div>
          <%= f.email_field :email, autocomplete: "email", placeholder: "tiger.woods@scorecard.golf",
              class: "w-full px-4 py-3 border border-gray-300 rounded-md text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
        </div>

        <!-- Password Field -->
        <div class="mb-4">
          <div class="mb-2">
            <%= f.label :password, "Password", class: "block text-sm font-medium text-gray-700" %>
          </div>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢",
              class: "w-full px-4 py-3 border border-gray-300 rounded-md text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
          <% if @minimum_password_length %>
            <p class="text-xs text-gray-500 mt-1">
              Minimum <%= @minimum_password_length %> characters required
            </p>
          <% end %>
        </div>

        <!-- Password Confirmation Field -->
        <div class="mb-6">
          <div class="mb-2">
            <%= f.label :password_confirmation, "Confirm password", class: "block text-sm font-medium text-gray-700" %>
          </div>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢",
              class: "w-full px-4 py-3 border border-gray-300 rounded-md text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
        </div>

        <!-- Submit Button -->
        <%= f.submit "Create account", class: "w-full py-3 px-4 bg-green-600 hover:bg-green-700 text-white font-medium rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 transition duration-200" %>
      <% end %>

      <!-- Sign In Link -->
      <div class="text-center mt-6">
        <p class="text-sm text-gray-600">
          Already have an account? 
          <%= link_to "Sign in here", new_session_path(resource_name), class: "text-green-600 hover:text-green-500" %>
        </p>
      </div>
      
      <!-- Back to Home -->
      <div class="text-center mt-4 pt-4 border-t border-gray-100">
        <%= link_to "‚Üê Back to Home", root_path, class: "text-sm text-gray-500 hover:text-gray-700" %>
      </div>
    </div>
  </div>
</div>
