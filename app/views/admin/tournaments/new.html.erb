<% content_for :title, "Create New Tournament - Admin" %>

<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-2xl font-semibold text-gray-900">Create New Tournament</h1>
      <p class="mt-2 text-sm text-gray-700">Set up a new Ryder Cup-style golf tournament</p>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
      <%= link_to "Cancel", admin_tournaments_path, 
          class: "inline-flex items-center justify-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50" %>
    </div>
  </div>

  <div class="mt-8">
    <div class="bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl">
      <div class="px-4 py-6 sm:p-8">
        <%= form_with(model: [:admin, @tournament], local: true, class: "space-y-6") do |form| %>
          <% if @tournament.errors.any? %>
            <div class="bg-red-50 border border-red-200 rounded-lg p-4">
              <div class="flex">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
                  <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                    <% @tournament.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          <% end %>

          <!-- Tournament Name -->
          <div>
            <%= form.label :name, "Tournament Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :name, 
                placeholder: "e.g., 2025 Spring Bullpen Cup", 
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
          </div>

          <!-- Tournament Description -->
          <div>
            <%= form.label :description, "Description", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_area :description, 
                rows: 4,
                placeholder: "Describe the tournament format, special rules, or any other details...", 
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
          </div>

          <!-- Dates Row -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <%= form.label :start_date, "Start Date", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.date_field :start_date, 
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
            </div>
            <div>
              <%= form.label :end_date, "End Date", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.date_field :end_date, 
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
            </div>
          </div>

          <!-- Venue -->
          <div>
            <%= form.label :venue, "Venue", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :venue, 
                placeholder: "e.g., Pebble Beach Golf Links", 
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
          </div>

          <!-- Submit Actions -->
          <div class="flex items-center justify-end space-x-3 pt-6 border-t border-gray-200">
            <%= link_to "Cancel", admin_tournaments_path, 
                class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
            <%= form.submit "Create Tournament", 
                class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div> 